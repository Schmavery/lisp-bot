(define slap
  (lambda (args ...)
  (join
    (list
        (if (nil? args)
        (nth (name-list) (rand (len (name-list))))
        (car args))
        (if (zero? (rand 2))
        "just got slapped.  Hard."
        "just got slapped." ))
    " ")
  )
)

(define hug
  (lambda (args ...)
  (join
    (list
        (if (nil? args)
        (nth (name-list) (rand (len (name-list))))
        (car args))
        (if (zero? (rand 2))
        "just got a BIG hug."
        "just got a hug."))
    " ")
  )
)

(define y (lambda () "(y)"))

(define score (lambda (name) (if (nil? ((get scores) name)) 0 ((get scores) name))))
(define inc-score (lambda (name) (set! scores (assoc (get scores) name (+ 1 (score name))))))
