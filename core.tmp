(define every-other-even
  (lambda (coll)
    (cond (empty? coll)
      '()
      (cond (even? (len coll))
        (cons (car coll) (every-other-even (cdr coll)))
        (every-other-even (cdr coll))))))

(define-macro let
  (lambda (vars body)
    ((lambda (~(every-other-even vars)) body) ~(every-other-odd vars))))